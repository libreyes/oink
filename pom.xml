<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>uk.org.openeyes</groupId>
	<artifactId>oink-parent</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>
	<name>OpenEyes Integration Kit Parent</name>
	<description>Parent project for building all of OINK.</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<spring.version>3.1.4.RELEASE</spring.version>
		<java.version>1.6</java.version>
		<org.slf4j.version>1.7.5</org.slf4j.version>
		<log4j.version>1.2.16</log4j.version>
		<junit.version>4.11</junit.version>
		<commonschain.version>1.2</commonschain.version>
		<spring.rabbit.version>1.2.1.RELEASE</spring.rabbit.version>
		<jackson.version>2.0.0</jackson.version>
		<javatuples.version>1.2</javatuples.version>
		<maven.failsafe.version>2.6</maven.failsafe.version>
		<jetty.version>8.1.5.v20120716</jetty.version>
		<jetty.maven.plugin.version>8.1.14.v20131031</jetty.maven.plugin.version>
	</properties>
	<modules>
		<module>oink-common</module>
		<module>oink-modules</module>
		<module>oink-samples</module>
		<module>oink-domain</module>
	</modules>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>${java.version}</source>
						<target>${java.version}</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<repositories>
		<repository>
			<id>repository.springframework.maven.release</id>
			<name>Spring Framework Maven Release Repository</name>
			<url>http://maven.springframework.org/release</url>
		</repository>
		<repository>
			<id>repository.springframework.maven.milestone</id>
			<name>Spring Framework Maven Milestone Repository</name>
			<url>http://maven.springframework.org/milestone</url>
		</repository>
		<repository>
			<!-- necessary for org.springframework.build.aws.maven dependency -->
			<id>repository.source.maven.release</id>
			<name>SpringSource Maven Release Repository</name>
			<url>http://repository.springsource.com/maven/bundles/release</url>
		</repository>
	</repositories>
</project>