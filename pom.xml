<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>uk.org.openeyes</groupId>
	<artifactId>oink-parent</artifactId>
	<version>0.1</version>
	<packaging>pom</packaging>
	<name>OINK Parent</name>
	<description>Parent project for building all of OINK.</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<spring.version>3.1.4.RELEASE</spring.version>
		<spring.rabbit.version>1.2.1.RELEASE</spring.rabbit.version>
		<java.version>1.7</java.version>
		<org.slf4j.version>1.7.5</org.slf4j.version>
		<log4j.version>1.2.16</log4j.version>
		<junit.version>4.11</junit.version>
		<commonschain.version>1.2</commonschain.version>
		<spring.rabbit.version>1.2.1.RELEASE</spring.rabbit.version>
		<jackson.version>2.0.0</jackson.version>
		<javatuples.version>1.2</javatuples.version>
		<maven.failsafe.version>2.6</maven.failsafe.version>
		<maven.release.version>2.4.2</maven.release.version>
		<jetty.version>8.1.7.v20120910</jetty.version>
		<commonsio.version>2.4</commonsio.version>
		<jetty.maven.plugin.version>8.1.14.v20131031</jetty.maven.plugin.version>
		<google.http.version>1.17.0-rc</google.http.version>
		<google.gson.version>2.2.4</google.gson.version>
		<openmap.version>1.0-SNAPSHOT</openmap.version>
		<fhir.version>0.80</fhir.version>
	</properties>
	<modules>
		<module>oink-common</module>
		<module>oink-modules</module>
		<module>oink-samples</module>
		<module>oink-domain</module>
	</modules>
	<scm>
		<connection>scm:git:git://github.com/openeyes/oink.git</connection>
		<developerConnection>scm:git:git@github.com:openeyes/oink.git</developerConnection>
		<url>https://github.com/openeyes/oink.git</url>
	  <tag>0.1</tag>
  </scm>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>${java.version}</source>
						<target>${java.version}</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>${maven.release.version}</version>
					<configuration>
						<autoVersionSubmodules>true</autoVersionSubmodules>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>org.apache.maven.scm</groupId>
							<artifactId>maven-scm-provider-gitexe</artifactId>
							<version>1.8.1</version>
						</dependency>
					</dependencies>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<configuration>
						<archive>
							<manifest>
								<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
								<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
							</manifest>
						</archive>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.1</version>
					<configuration>
						<archive>
							<manifest>
								<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
								<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
							</manifest>
						</archive>
						<archiveClasses>true</archiveClasses>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<repositories>
		<repository>
			<id>repository.springframework.maven.release</id>
			<name>Spring Framework Maven Release Repository</name>
			<url>http://maven.springframework.org/release</url>
		</repository>
		<repository>
			<id>repository.springframework.maven.milestone</id>
			<name>Spring Framework Maven Milestone Repository</name>
			<url>http://maven.springframework.org/milestone</url>
		</repository>
		<repository>
			<!-- necessary for org.springframework.build.aws.maven dependency -->
			<id>repository.source.maven.release</id>
			<name>SpringSource Maven Release Repository</name>
			<url>http://repository.springsource.com/maven/bundles/release</url>
		</repository>
	</repositories>
</project>