<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.org.openeyes.oink.tests</groupId>
		<artifactId>single-box</artifactId>
		<version>0.3-SNAPSHOT</version>
	</parent>
	<artifactId>oink-itest-shared</artifactId>
	<name>Oink :: Integration Tests :: Single Box :: Shared</name>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<rabbit.start.script>${basedir}/../oink-itest-shared/src/main/resources/config/startRabbit.sh</rabbit.start.script>
		<rabbit.stop.script>${basedir}/../oink-itest-shared/src/main/resources/config/stopRabbit.sh</rabbit.stop.script>
		<it.proxy.config>${basedir}/../oink-itest-shared/src/test/resources/proxy.properties</it.proxy.config>
		<it.hl7v2.config>${basedir}/../oink-itest-shared/src/test/resources/hl7v2.properties</it.hl7v2.config>
		<it.facadeToHl7v2.config>${basedir}/../oink-itest-shared/src/test/resources/facade-ToHl7.properties</it.facadeToHl7v2.config>
		<it.facadeToProxy.config>${basedir}/../oink-itest-shared/src/test/resources/facade.properties</it.facadeToProxy.config>		
	</properties>
	<dependencies>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.7.7</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>ca.uhn.hapi</groupId>
			<artifactId>hapi-base</artifactId>
			<version>2.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>ca.uhn.hapi.fhir</groupId>
			<artifactId>hapi-fhir-base</artifactId>
			<version>0.3</version>
			<scope>test</scope>
		</dependency>
	</dependencies>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
