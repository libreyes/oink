<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>tests</artifactId>
		<groupId>uk.org.openeyes.oink</groupId>
		<version>0.3-SNAPSHOT</version>
	</parent>
	<groupId>uk.org.openeyes.oink.tests</groupId>	
	<artifactId>single-box</artifactId>
	<modules>
		<module>oink-itest-karaf</module>
		<module>oink-itest-adapters</module>
		<module>oink-itest-shared</module>
	</modules>
	<packaging>pom</packaging>
	<name>Oink :: Integration Tests :: Single Box</name>

	<profiles>
		<profile>
			<id>develop</id>
			<properties>
				<it.proxy.config>${basedir}/oink-itest-shared/src/test/resources/proxy.properties</it.proxy.config>
				<it.hl7v2.config>${basedir}/oink-itest-shared/src/test/resources/hl7v2.properties</it.hl7v2.config>
				<it.facadeToHl7v2.config>${basedir}/oink-itest-shared/src/test/resources/facade-ToHl7.properties</it.facadeToHl7v2.config>
				<it.facadeToProxy.config>${basedir}/oink-itest-shared/src/test/resources/facade.properties</it.facadeToProxy.config>
				<rabbit.start.script>${basedir}/oink-itest-shared/src/main/resources/config/startRabbit.sh</rabbit.start.script>
				<rabbit.stop.script>${basedir}/oink-itest-shared/src/main/resources/config/stopRabbit.sh</rabbit.stop.script>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.1</version>
						<executions>
							<execution>
								<id>start-rabbit</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>${rabbit.start.script}</executable>
								</configuration>
							</execution>
							<execution>
								<id>stop-rabbit</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>${rabbit.stop.script}</executable>
								</configuration>
							</execution>					
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
						<version>2.17</version>
						<configuration>
							<systemProperties>
								<it.facadeToHl7v2.config>${it.facadeToHl7v2.config}</it.facadeToHl7v2.config>
								<it.facadeToProxy.config>${it.facadeToProxy.config}</it.facadeToProxy.config>
								<it.hl7v2.config>${it.hl7v2.config}</it.hl7v2.config>
								<it.proxy.config>${it.proxy.config}</it.proxy.config>
							</systemProperties>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>integration-test</goal>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
					</plugin>					
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
			</plugin>
		</plugins>
	</build>
</project>
